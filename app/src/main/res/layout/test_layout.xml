<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"

    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:ignore="ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg1"
        android:id="@+id/ContstraintContainer"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProfileImage2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
        <!--            app:layout_constraintBottom_toTopOf="@+id/ivTweetImage"-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/ivProfileImage2"
            app:layout_constraintStart_toEndOf="@+id/ivProfileImage2"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/prosto_one"
                android:text="title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvTimesStamp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="2h"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/cardview_dark_background"
                 />

        </LinearLayout>


        <TextView
            android:id="@+id/tvHandle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="subhead"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfileImage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivProfileImage2" />


        <!--        <ImageView-->
        <!--            android:id="@+id/ivTweetImage"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_marginTop="12dp"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            app:srcCompat="@android:color/darker_gray"-->
        <!--            app:layout_constraintDimensionRatio="H,16:9"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/ivProfileImage2"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintBottom_toTopOf="@+id/action_button_1" />-->


        <TextView
            android:id="@+id/tvBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="16dp"
            android:lineSpacingExtra="8dp"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintBottom_toTopOf="@+id/ButtonContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProfileImage2" />
        <!--            app:layout_constraintBottom_toTopOf="@+id/action_button_1"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:id="@+id/ButtonContainer"
                android:gravity="right"
                app:layout_constraintTop_toBottomOf="@id/tvBody"
                app:layout_constraintStart_toStartOf="@id/ContstraintContainer"
                app:layout_constraintRight_toRightOf="@id/ContstraintContainer"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">
                <ImageButton
                    style="@style/Widget.AppCompat.ImageButton"
                    android:id="@+id/action_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:minWidth="0dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:background="?android:attr/selectableItemBackground"
                    />

                <ImageButton
                    style="@style/Widget.AppCompat.ImageButton"
                    android:id="@+id/action_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_height_24"
                    android:background="?android:attr/selectableItemBackground" />
                <ImageButton
                    style="@style/Widget.AppCompat.ImageButton"
                    android:id="@+id/action_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"

                    android:minWidth="0dp"
                    android:src="@drawable/ic_baseline_comment_24"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>